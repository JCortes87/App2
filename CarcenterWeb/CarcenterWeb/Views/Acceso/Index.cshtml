
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <form id="frmLogin">
        <div class="col-lg-6 col-lg-offset-3">
            Usuario: <input type="text" name="user" />
            Password: <input type="password" name="pwd" />
            <input type="submit" value="Ingresar" class="btn-success" />
        </div>
    </form>
</div>
@section scripts
{
    <script>
    $(document).ready(function () { //jquery es el lenguaje que me permite capturar html para manipularlo
        $("#frmLogin").submit(function (e) { //e es el evento que crea el submit o es la representacion
            e.preventDefault();
            url = "@Url.Content("~/Acceso/Enter")";
            parametros = $(this).serialize(); //this es para decir que capture todo lo que encuentre
            $.post(url, parametros, function (data){
                if (data == "1") {
                    document.location.href = "@Url.Content("~/")";
                } else {
                    alert(data);
                }

            })
        });
    });
    </script>
}
